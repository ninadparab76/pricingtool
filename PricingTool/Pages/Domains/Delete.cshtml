@page
@model PricingTool.Pages.Domains.DeleteModel

@{
    ViewData["Title"] = "Delete Domain";
}

<h1>Delete Domain</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this domain?</h3>
    <p>This action cannot be undone.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Domain Details</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Domain:</dt>
                    <dd class="col-sm-9">@(Model.Domain?.DomainName)@(Model.Domain?.Tld)</dd>
                    
                    <dt class="col-sm-3">Client:</dt>
                    <dd class="col-sm-9">@(Model.Domain?.Client?.Title ?? "N/A")</dd>
                    
                    <dt class="col-sm-3">Expiration Date:</dt>
                    <dd class="col-sm-9">
                        @if (Model.Domain?.ExpirationDate != null)
                        {
                            @Model.Domain.ExpirationDate.Value.ToShortDateString()
                        }
                        else
                        {
                            <span>N/A</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">Created On:</dt>
                    <dd class="col-sm-9">@Model.Domain?.DateCreated.ToShortDateString()</dd>
                    
                    <dt class="col-sm-3">Last Modified:</dt>
                    <dd class="col-sm-9">@Model.Domain?.DateModified.ToShortDateString()</dd>
                </dl>
            </div>
        </div>
        
        <form method="post" class="mt-3">
            <input type="hidden" asp-for="Domain!.Id" />
            <div class="d-flex justify-content-between">
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="card-title mb-0">Warning</h5>
            </div>
            <div class="card-body">
                <p>Deleting this domain will permanently remove it from your database.</p>
                <p>This will not affect the actual domain registration with the registrar.</p>
                <p>Consider the following before deleting:</p>
                <ul>
                    <li>Any associated pricing or discount information will be lost</li>
                    <li>Historical tracking will be removed</li>
                    <li>Any custom settings for this domain will be lost</li>
                </ul>
            </div>
        </div>
    </div>
</div>
